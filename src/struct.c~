#include<stdio.h>
#include "struct.h"
#include "define.h"

/* BOARD */

struct board {
  /* Board creation : 
     -table "positions" with tag to each position
     -table "neighbours" with names of neighbours to each position */
  int num_positions; 
  int num_neighbours;
  int positions[MAX_POS][MAX_TAG];
  int neighbours[MAX_POS][MAX_NEIGHBOURS];
};

/* AFFECT */

struct affect {
  /*Struct which give the affectation of pelicans on the board.
    Pelicans are define by a color, represented by an integer.
    The table "pelicans" : table of integer */
  int pelicans[MAX_POS];  
};
